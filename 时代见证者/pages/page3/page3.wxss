.input_control{
  width:60%;
  margin:20px auto;
  background-color:white;
}
.input{
  box-sizing: border-box;
  text-align:left;
  font-size:1.0em;
  height:40px;
  border-radius:4px;
  border:1px solid #c8cccf;
  color:#6a6f77;
  -web-kit-appearance:none;
  -moz-appearance: none;
  display:block;
  outline:0;
  padding:0 1em;
  text-decoration:none;
  width:100%;
}
.input:focus{
  border:1px solid #ff7496;
}
page {
  height:100%;
}